%header
  %nav.navbar.navbar-default.navbar-fixed-top{role: "navigation"}
    / Brand and toggle get grouped for better mobile display
    .navbar-header
      %button.navbar-toggle{"data-target" => "#navbar-collapse-1", "data-toggle" => "collapse", type: "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{href: "/"} 赋为
    / Collect the nav links, forms, and other content for toggling
    #navbar-collapse-1.collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li= link_to "主页", main_app.root_path
        /%li= link_to "价格", main_app.pricing_path, class: active_page(main_app.pricing_path)
        %li= link_to "服务", main_app.forum_path("service")
        %li= link_to "动态", main_app.forum_path("news")
        %li= link_to "O2O", main_app.forum_path("o2o")
        %li{style: "display: none;"}= link_to "论坛", forem.root_path, class: active_page(forem.root_path)
        - if current_user
          %li= link_to current_user.name, main_app.platform_user_path(current_user)
        - else
          /%li= link_to "关于", main_app.root_path(anchor: "about")
          %li= link_to "关于", "/team"
          %li= link_to "登录", "#", data: { toggle: "modal", target: "#signin"}
          %li= link_to "注册", "#", data: { toggle: "modal", target: "#signup"}
    / /.navbar-collapse
