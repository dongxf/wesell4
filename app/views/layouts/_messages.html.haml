- flash.each do |name, msg|
  /- if msg.is_a?(String)
  /  %div{:class => "alert alert-block alert-#{name == :notice ? "success" : "error"}"}
  /    %a.close{"data-dismiss" => "alert"}
  /      %i.icon-remove
  /    = content_tag :div, msg, :id => "flash_#{name}"
  - if msg.is_a?(String)
    - if name == :notice
      .alert.alert-success
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        =simple_format(msg).html_safe
    - else
      .alert.alert-danger
        <a href="#" class="close" data-dismiss="alert">&times;</a>
        =simple_format(msg).html_safe
