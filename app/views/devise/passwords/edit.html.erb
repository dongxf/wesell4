<div class='container' style="padding-top: 150px; height: 500px">
  <h2>修改密码</h2>
  <div class='row'>
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :defaults => { :input_html => { :class => 'form-control' } }, html: { :method => :put, class: 'form-horizontal', role: "form" }) do |f| %>
      <%= f.error_notification %>

      <%= f.input :reset_password_token, :as => :hidden %>
      <%= f.full_error :reset_password_token %>

      <div class="form-inputs">
        <%= f.input :password, :label => "修改密码", :required => true, :autofocus => true %>
        <%= f.input :password_confirmation, :label => "确认密码", :required => true %>
      </div>

      <%= f.button :submit, "修改密码", class: 'btn btn-orange' %>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>