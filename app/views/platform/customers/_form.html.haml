= simple_form_for [:platform, @customer], :defaults => { :input_html => { :class => 'form-control' } }, html: { class: 'form-horizontal', role: "form" } do |f|
  = f.error_notification

  = f.input :balance, placeholder: '例如99.99'

  = link_to '放弃返回', :back, class: 'btn btn-info'
  = f.button :submit, '提交', class: 'btn btn-orange'
