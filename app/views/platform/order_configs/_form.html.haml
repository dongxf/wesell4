= simple_nested_form_for [:platform, @store, @order_config], :defaults => { :input_html => { :class => 'form-control' } }, html: { class: 'form-horizontal', role: "form" } do |f|
  = f.error_notification

  = f.input :store_id, as: :hidden
  = f.input :name
  = f.input :style, collection: OrderConfig::STYLES, include_blank: false
  %fieldset
    %legend 选项
    = f.simple_fields_for :order_config_options
    .clearfix.mb-s= f.link_to_add '添加选项', :order_config_options, class: 'btn btn-default'
  .col-md-2.col-md-offset-3= link_to '放弃返回', :back, class: 'btn btn-info'
  .col-md-2= f.button :submit, '提交', class: 'btn btn-orange'