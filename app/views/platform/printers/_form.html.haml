= simple_form_for [:platform, @store, @printer], defaults: {input_html: {class: 'form-control'}}, html: {class: 'form-horizontal', role: "form"} do |f|
  = f.error_notification

  = f.input :store_id, as: :hidden
  = f.input :model, as: :select, collection: Printer::MODEL_TYPE.invert, include_blank: false
  = f.input :imei
  = f.input :copies

  .form-actions
    = f.submit '提交', class: 'btn btn-orange'
    = link_to '返回', platform_store_printers_path, class: 'btn btn-info'
